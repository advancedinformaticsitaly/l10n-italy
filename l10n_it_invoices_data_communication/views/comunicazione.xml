                    <field name="totale_iva" sum="Tot Imposta"/>
                </tree>
            </field>
        </record>

        <record id="view_communication_invoices_data_out_invoices_body_form" model="ir.ui.view">
            <field name="name">comunicazione.dati_iva.fatture.emesse.body.form</field>
