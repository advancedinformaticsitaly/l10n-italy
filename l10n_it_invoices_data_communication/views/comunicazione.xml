        <record id="view_communication_invoices_data_out_invoices_body_tree" model="ir.ui.view">
            <field name="name">comunicazione.dati_iva.fatture.emesse.body.tree</field>
            <field name="model">communication.invoices.data.out.invoices.body</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Fatture emesse">
