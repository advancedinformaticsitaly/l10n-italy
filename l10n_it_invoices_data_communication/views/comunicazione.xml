<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_communication_invoices_data_tree" model="ir.ui.view">
            <field name="name">comunicazione.dati_iva.tree</field>
            <field name="model">communication.invoices.data</field>
            <field name="arch" type="xml">
                <tree string="Comunicazioni dati IVA">
                    <field name="identifier"/>
                    <field name="transmission_data"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_communication_invoices_data_form" model="ir.ui.view">
            <field name="name">communication.invoices.data.form</field>
            <field name="model">communication.invoices.data</field>
            <field name="arch" type="xml">
                <form string="Comunicazione dati IVA">
                    <header>
                        <button name="compute_values" string="Calcola Valori" type="object" class="oe_highlight"
                                attrs="{'invisible':[('transmission_data', '=', 'ANN')]}"/>
                        <button type="action" name="%(action_compute_fiscal_document_type)d"
                                string="Assegna tipo documento fiscale"
                                attrs="{'invisible':[('transmission_data', '=', 'ANN')]}"/>
                        <button name="check_errors" string="Controllo Errori" type="object"
                                attrs="{'invisible':[('transmission_data', '=', 'ANN')]}"/>
                    </header>
                    <sheet>
                        <group name="company">
                            <group>
                            <field name="company_id" widget="selection"/>
                            <field name="declarant_fiscalcode"/>
                            <field name="codice_carica_id" attrs="{'required':[('declarant_fiscalcode', '!=', False)]}"/>
                            </group>
                            <group>
                            <field name="identifier"/>
                            <field name="communication_id"
                                   attrs="{'required':[('transmission_data', '=', 'ANN')]}"/>
                            </group>
                        </group>
                        <newline/>
                        <group name="Periodo">
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group name="Riepilogo">
                            <field name="transmission_data" widget="radio"/>
                        </group>
                        <notebook attrs="{'invisible':[('transmission_data', '!=', 'DTE')]}">
	                        <page string="Cedente" name="page_cedente">
	                            <group name="cedente">
	                                <field name="partner_seller_id"/>
	                                <field name="seller_IdFiscaleIVA_IdPaese"/>
	                                <field name="seller_IdFiscaleIVA_IdCodice"/>
	                                <field name="seller_CodiceFiscale"/>
	                                <field name="seller_Denominazione"/>
	                                <field name="seller_Nome"/>
	                                <field name="seller_Cognome"/>
	                            </group>
	                        </page>
	                        <page string="Sede">
	                            <group name="cedente_sede">
	                                <field name="seller_hq_Indirizzo"/>
	                                <field name="seller_hq_NumeroCivico"/>
	                                <field name="seller_hq_Cap"/>
	                                <field name="seller_hq_Comune"/>
	                                <field name="seller_hq_Provincia"/>
	                                <field name="seller_hq_Nazione"/>
	                            </group>
	                        </page>
	                        <page string="Stabile Organizzazione">
	                            <group name="cedente_stabile_organizzazione">
	                                <field name="seller_so_Indirizzo"/>
	                                <field name="seller_so_NumeroCivico"/>
	                                <field name="seller_so_Cap"/>
	                                <field name="seller_so_Comune"/>
	                                <field name="seller_so_Provincia"/>
	                                <field name="seller_so_Nazione"/>
	                            </group>
	                        </page>
	                        <page string="Rappresentante Fiscale">
	                            <group name="cedente_rappresentante_fiscale">
	                                <field name="seller_fr_IdFiscaleIVA_IdPaese"/>
	                                <field name="seller_fr_IdFiscaleIVA_IdCodice"/>
	                                <field name="seller_fr_Denominazione"/>
	                                <field name="seller_fr_Nome"/>
	                                <field name="seller_fr_Cognome"/>
	                            </group>
	                        </page>
	                    </notebook>
	                    <notebook attrs="{'invisible':[('transmission_data', '!=', 'DTR')]}">
	                       <page string="Cessionario" name="page_cessionario">
	                            <group name="cessionario">
	                                <field name="partner_assignee_id"/>
	                                <field name="assignee_IdFiscaleIVA_IdPaese"/>
	                                <field name="assignee_IdFiscaleIVA_IdCodice"/>
	                                <field name="assignee_CodiceFiscale"/>
	                                <field name="assignee_Denominazione"/>
	                                <field name="assignee_Nome"/>
	                                <field name="assignee_Cognome"/>
	                            </group>
	                        </page>
	                        <page string="Sede">
	                            <group name="cessionario_sede">
	                                <field name="assignee_hq_Indirizzo"/>
	                                <field name="assignee_hq_NumeroCivico"/>
	                                <field name="assignee_hq_Cap"/>
	                                <field name="assignee_hq_Comune"/>
	                                <field name="assignee_hq_Provincia"/>
	                                <field name="assignee_hq_Nazione"/>
	                            </group>
	                        </page>
	                        <page string="Stabile Organizzazione">
	                            <group name="cessionario_stabile_organizzazione">
	                                <field name="assignee_so_Indirizzo"/>
	                                <field name="assignee_so_NumeroCivico"/>
	                                <field name="assignee_so_Cap"/>
	                                <field name="assignee_so_Comune"/>
	                                <field name="assignee_so_Provincia"/>
	                                <field name="assignee_so_Nazione"/>
	                            </group>
	                        </page>
	                        <page string="Rappresentante Fiscale">
	                            <group name="cessionario_rappresentante_fiscale">
	                                <field name="assignee_fr_IdFiscaleIVA_IdPaese"/>
	                                <field name="assignee_fr_IdFiscaleIVA_IdCodice"/>
	                                <field name="assignee_fr_Denominazione"/>
	                                <field name="assignee_fr_Nome"/>
	                                <field name="assignee_fr_Cognome"/>
	                            </group>
	                        </page>
	                    </notebook>
                        <notebook attrs="{'invisible':[('transmission_data', '=', 'ANN')]}">
                            <page string="Fatture Emesse"
                                attrs="{'invisible':[('transmission_data', '!=', 'DTE')]}">
                                <group>
                                    <field name="out_invoices_ids" nolabel="1">
                                    </field>
                                </group>
                            </page>
                            <page string="Fatture Ricevute"
                                attrs="{'invisible':[('transmission_data', '!=', 'DTR')]}">
                                <group>
                                    <field name="in_invoices_ids" nolabel="1">
                                    </field>
                                </group>
                            </page>
                            <page string="Errori">
                                <group>
                                    <field name="errors" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_communication_invoices_data" model="ir.actions.act_window">
            <field name="name">Comunicazione dati IVA</field>
            <field name="res_model">communication.invoices.data</field>
            <field name="view_id" ref="view_communication_invoices_data_tree"/>
        </record>

        <menuitem id="menu_communication_invoices_data" name="Comunicazione dati IVA"
            action="action_communication_invoices_data"
            parent="account.menu_finance_entries" sequence="50"/>

