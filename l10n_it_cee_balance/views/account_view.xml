<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_form_cee" model="ir.ui.view">
        <field name="name">view_account_form_cee</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="cee_group_id"/>
            </field>
        </field>
    </record>

    <record id="view_account_group_cee_form" model="ir.ui.view">
        <field name="name">account.group.cee.form</field>
        <field name="model">account.group.cee</field>
        <field name="arch" type="xml">
            <form string="CEE Group">
                <group>
                    <field name="name"/>
                    <field name="code_prefix"/>
                    <field name="parent_id"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_account_group_cee_search" model="ir.ui.view">
        <field name="name">account.group.cee.search</field>
        <field name="model">account.group.cee</field>
        <field name="arch" type="xml">
            <search string="CEE groups">
                <field name="name"
                       filter_domain="['|', ('code_prefix', '=like', str(self) + '%'), ('name', 'ilike', self)]"
                       string="CEE group"/>
            </search>
        </field>
    </record>

    <record id="view_account_group_cee_tree" model="ir.ui.view">
        <field name="name">account.group.cee.tree</field>
        <field name="model">account.group.cee</field>
        <field name="arch" type="xml">
            <tree string="CEE Group">
                <field name="code_prefix"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_account_group_cee_tree" model="ir.actions.act_window">
        <field name="name">CEE Groups</field>
        <field name="res_model">account.group.cee</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_account_group_cee_search"/>
    </record>

    <menuitem id="account_group_cee_menu"
              action="action_account_group_cee_tree"
              sequence="50"
              parent="account.account_account_menu"
    />
</odoo>
